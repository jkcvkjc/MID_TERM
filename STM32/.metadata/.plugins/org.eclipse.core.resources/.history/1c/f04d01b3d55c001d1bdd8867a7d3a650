#include "display7Segment.h"

void display7Segment(int count){
	switch(count){
	case 0:
		HAL_GPIO_WritePin(SEG0_0_GPIO_Port, SEG0_0_Pin, 0);
		HAL_GPIO_WritePin(SEG0_1_GPIO_Port, SEG0_1_Pin, 0);
		HAL_GPIO_WritePin(SEG0_2_GPIO_Port, SEG0_2_Pin, 0);
		HAL_GPIO_WritePin(SEG0_3_GPIO_Port, SEG0_3_Pin, 0);
		HAL_GPIO_WritePin(SEG0_4_GPIO_Port, SEG0_4_Pin, 0);
		HAL_GPIO_WritePin(SEG0_5_GPIO_Port, SEG0_5_Pin, 0);
		HAL_GPIO_WritePin(SEG0_6_GPIO_Port, SEG0_6_Pin, 1);
		break;
	case 1:
		HAL_GPIO_WritePin(SEG0_0_GPIO_Port, SEG0_0_Pin, 1);
		HAL_GPIO_WritePin(SEG0_1_GPIO_Port, SEG0_1_Pin, 0);
		HAL_GPIO_WritePin(SEG0_2_GPIO_Port, SEG0_2_Pin, 0);
		HAL_GPIO_WritePin(SEG0_3_GPIO_Port, SEG0_3_Pin, 1);
		HAL_GPIO_WritePin(SEG0_4_GPIO_Port, SEG0_4_Pin, 1);
		HAL_GPIO_WritePin(SEG0_5_GPIO_Port, SEG0_5_Pin, 1);
		HAL_GPIO_WritePin(SEG0_6_GPIO_Port, SEG0_6_Pin, 1);
		break;
	case 2:
		HAL_GPIO_WritePin(SEG0_0_GPIO_Port, SEG0_0_Pin, 0);
		HAL_GPIO_WritePin(SEG0_1_GPIO_Port, SEG0_1_Pin, 0);
		HAL_GPIO_WritePin(SEG0_2_GPIO_Port, SEG0_2_Pin, 1);
		HAL_GPIO_WritePin(SEG0_3_GPIO_Port, SEG0_3_Pin, 0);
		HAL_GPIO_WritePin(SEG0_4_GPIO_Port, SEG0_4_Pin, 0);
		HAL_GPIO_WritePin(SEG0_5_GPIO_Port, SEG0_5_Pin, 1);
		HAL_GPIO_WritePin(SEG0_6_GPIO_Port, SEG0_6_Pin, 0);
		break;
	case 3:
		HAL_GPIO_WritePin(SEG0_0_GPIO_Port, SEG0_0_Pin, 0);
		HAL_GPIO_WritePin(SEG0_1_GPIO_Port, SEG0_1_Pin, 0);
		HAL_GPIO_WritePin(SEG0_2_GPIO_Port, SEG0_2_Pin, 0);
		HAL_GPIO_WritePin(SEG0_3_GPIO_Port, SEG0_3_Pin, 0);
		HAL_GPIO_WritePin(SEG0_4_GPIO_Port, SEG0_4_Pin, 1);
		HAL_GPIO_WritePin(SEG0_5_GPIO_Port, SEG0_5_Pin, 1);
		HAL_GPIO_WritePin(SEG0_6_GPIO_Port, SEG0_6_Pin, 0);
		break;
	case 4:
		HAL_GPIO_WritePin(SEG0_0_GPIO_Port, SEG0_0_Pin, 1);
		HAL_GPIO_WritePin(SEG0_1_GPIO_Port, SEG0_1_Pin, 0);
		HAL_GPIO_WritePin(SEG0_2_GPIO_Port, SEG0_2_Pin, 0);
		HAL_GPIO_WritePin(SEG0_3_GPIO_Port, SEG0_3_Pin, 1);
		HAL_GPIO_WritePin(SEG0_4_GPIO_Port, SEG0_4_Pin, 1);
		HAL_GPIO_WritePin(SEG0_5_GPIO_Port, SEG0_5_Pin, 0);
		HAL_GPIO_WritePin(SEG0_6_GPIO_Port, SEG0_6_Pin, 0);
		break;
	case 5:
		HAL_GPIO_WritePin(SEG0_0_GPIO_Port, SEG0_0_Pin, 0);
		HAL_GPIO_WritePin(SEG0_1_GPIO_Port, SEG0_1_Pin, 1);
		HAL_GPIO_WritePin(SEG0_2_GPIO_Port, SEG0_2_Pin, 0);
		HAL_GPIO_WritePin(SEG0_3_GPIO_Port, SEG0_3_Pin, 0);
		HAL_GPIO_WritePin(SEG0_4_GPIO_Port, SEG0_4_Pin, 1);
		HAL_GPIO_WritePin(SEG0_5_GPIO_Port, SEG0_5_Pin, 0);
		HAL_GPIO_WritePin(SEG0_6_GPIO_Port, SEG0_6_Pin, 0);
		break;
	case 6:
		HAL_GPIO_WritePin(SEG0_0_GPIO_Port, SEG0_0_Pin, 0);
		HAL_GPIO_WritePin(SEG0_1_GPIO_Port, SEG0_1_Pin, 1);
		HAL_GPIO_WritePin(SEG0_2_GPIO_Port, SEG0_2_Pin, 0);
		HAL_GPIO_WritePin(SEG0_3_GPIO_Port, SEG0_3_Pin, 0);
		HAL_GPIO_WritePin(SEG0_4_GPIO_Port, SEG0_4_Pin, 0);
		HAL_GPIO_WritePin(SEG0_5_GPIO_Port, SEG0_5_Pin, 0);
		HAL_GPIO_WritePin(SEG0_6_GPIO_Port, SEG0_6_Pin, 0);
		break;
	case 7:
		HAL_GPIO_WritePin(SEG0_0_GPIO_Port, SEG0_0_Pin, 0);
		HAL_GPIO_WritePin(SEG0_1_GPIO_Port, SEG0_1_Pin, 0);
		HAL_GPIO_WritePin(SEG0_2_GPIO_Port, SEG0_2_Pin, 0);
		HAL_GPIO_WritePin(SEG0_3_GPIO_Port, SEG0_3_Pin, 1);
		HAL_GPIO_WritePin(SEG0_4_GPIO_Port, SEG0_4_Pin, 1);
		HAL_GPIO_WritePin(SEG0_5_GPIO_Port, SEG0_5_Pin, 1);
		HAL_GPIO_WritePin(SEG0_6_GPIO_Port, SEG0_6_Pin, 1);
		break;
	case 8:
		HAL_GPIO_WritePin(SEG0_0_GPIO_Port, SEG0_0_Pin, 0);
		HAL_GPIO_WritePin(SEG0_1_GPIO_Port, SEG0_1_Pin, 0);
		HAL_GPIO_WritePin(SEG0_2_GPIO_Port, SEG0_2_Pin, 0);
		HAL_GPIO_WritePin(SEG0_3_GPIO_Port, SEG0_3_Pin, 0);
		HAL_GPIO_WritePin(SEG0_4_GPIO_Port, SEG0_4_Pin, 0);
		HAL_GPIO_WritePin(SEG0_5_GPIO_Port, SEG0_5_Pin, 0);
		HAL_GPIO_WritePin(SEG0_6_GPIO_Port, SEG0_6_Pin, 0);
		break;
	case 9:
		HAL_GPIO_WritePin(SEG0_0_GPIO_Port, SEG0_0_Pin, 0);
		HAL_GPIO_WritePin(SEG0_1_GPIO_Port, SEG0_1_Pin, 0);
		HAL_GPIO_WritePin(SEG0_2_GPIO_Port, SEG0_2_Pin, 0);
		HAL_GPIO_WritePin(SEG0_3_GPIO_Port, SEG0_3_Pin, 0);
		HAL_GPIO_WritePin(SEG0_4_GPIO_Port, SEG0_4_Pin, 1);
		HAL_GPIO_WritePin(SEG0_5_GPIO_Port, SEG0_5_Pin, 0);
		HAL_GPIO_WritePin(SEG0_6_GPIO_Port, SEG0_6_Pin, 0);
		break;
	default:
		break;
	}
}
